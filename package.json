{
    "name": "linting-and-formatting",
    "repository": "git@github.com:LandrAudio/linting-and-formatting.git",
    "author": "LANDR <development@landr.com>",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": "24.10"
    },
    "packageManager": "pnpm@10.26.1",
    "devDependencies": {
        "@auto-it/all-contributors": "~11.3.6",
        "@auto-it/conventional-commits": "~11.3.6",
        "@auto-it/slack": "~11.3.6",
        "auto": "~11.3.6",
        "eslint": "~8.57.1",
        "husky": "^7.0.4",
        "lerna": "~9.0.3",
        "lint-staged": "^12.3.5",
        "prettier": "~3.3.3",
        "typescript": "~5.9.3"
    },
    "scripts": {
        "release": "auto shipit",
        "prepare": "husky install",
        "quick-install": "pnpm install"
    },
    "auto": {
        "plugins": [
            "npm",
            [
                "all-contributors",
                {
                    "exclude": [
                        "dependabot",
                        "dependabot[bot]",
                        "allcontributors",
                        "allcontributors[bot]"
                    ]
                }
            ],
            "conventional-commits",
            "released",
            [
                "slack",
                {
                    "auth": "app",
                    "channels": [
                        "test-channel-auto"
                    ]
                }
            ]
        ],
        "labels": [
            {
                "name": "dependencies",
                "changelogTitle": "ðŸ”© Dependency Updates",
                "description": "Update one or more dependencies version",
                "releaseType": "patch",
                "color": "#8732bc"
            }
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --cache --fix"
        ]
    }
}
