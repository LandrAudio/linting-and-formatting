{
    "name": "linting-and-formatting",
    "repository": "git@github.com:Mixgenius/linting-and-formatting.git",
    "author": "LANDR <development@landr.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@auto-it/all-contributors": "^9.58.0",
        "@auto-it/conventional-commits": "^9.58.0",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "auto": "^9.58.0",
        "eslint": "^8.5.0",
        "eslint-config-landr": "^0.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "^12.1.3",
        "prettier": "^2.5.1",
        "prettier-config-landr": "^0.2.0",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "release": "auto shipit"
    },
    "auto": {
        "plugins": [
            "npm",
            [
                "all-contributors",
                {
                    "exclude": [
                        "dependabot",
                        "dependabot[bot]",
                        "allcontributors",
                        "allcontributors[bot]"
                    ]
                }
            ],
            "conventional-commits",
            "released"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --cache --fix"
        ]
    }
}
