{
    "name": "linting-and-formatting",
    "repository": "git@github.com:Mixgenius/linting-and-formatting.git",
    "author": "LANDR <development@landr.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@auto-it/all-contributors": "^10.30.0",
        "@auto-it/conventional-commits": "^10.30.0",
        "@auto-it/slack": "^10.30.0",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "auto": "^10.30.0",
        "eslint": "^7.32.0",
        "eslint-config-landr": "^0.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.4.2",
        "prettier": "^2.3.2",
        "prettier-config-landr": "^0.2.0",
        "typescript": "^3.7.5"
    },
    "scripts": {
        "release": "auto shipit"
    },
    "auto": {
        "plugins": [
            "npm",
            [
                "all-contributors",
                {
                    "exclude": [
                        "dependabot",
                        "dependabot[bot]",
                        "allcontributors",
                        "allcontributors[bot]"
                    ]
                }
            ],
            "conventional-commits",
            "released",
            [
                "slack",
                {
                    "auth": "app",
                    "channels": [
                        "test-channel-auto"
                    ]
                }
            ]
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --cache --fix"
        ]
    }
}
