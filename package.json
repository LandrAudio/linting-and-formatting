{
    "name": "linting-and-formatting",
    "repository": "git@github.com:Mixgenius/linting-and-formatting.git",
    "author": "LANDR <development@landr.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@auto-it/all-contributors": "^10.34.1",
        "@auto-it/conventional-commits": "^10.34.1",
        "@auto-it/slack": "^10.34.1",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "auto": "^10.34.1",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "lerna": "^4.0.0",
        "lint-staged": "^12.3.5",
        "prettier": "^2.5.1",
        "typescript": "^4.6.2"
    },
    "scripts": {
        "release": "auto shipit",
        "prepare": "husky install"
    },
    "auto": {
        "plugins": [
            "npm",
            [
                "all-contributors",
                {
                    "exclude": [
                        "dependabot",
                        "dependabot[bot]",
                        "allcontributors",
                        "allcontributors[bot]"
                    ]
                }
            ],
            "conventional-commits",
            "released",
            [
                "slack",
                {
                    "auth": "app",
                    "channels": [
                        "test-channel-auto"
                    ]
                }
            ]
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --cache --fix"
        ]
    }
}
